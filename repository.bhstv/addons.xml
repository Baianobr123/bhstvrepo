<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.bhstv" name="BHS TV Repo" version="1.0.0" provider-name="Baianobr123">
        <extension point="xbmc.addon.repository" name="BHS TV Repo">
            <dir>
                <info compressed="false">https://baianobr123.github.io/bhstvrepo/addons.xml</info>
                <checksum>https://baianobr123.github.io/bhstvrepo/addons.xml.md5</checksum>
                <datadir zip="true">https://baianobr123.github.io/bhstvrepo/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Repositório BHS TV</summary>
            <description>Repositório oficial para os addons BHS TV.</description>
            <platform>all</platform>
        </extension>
    </addon>

    <addon id="plugin.video.bhstv" name="BHS TV" version="1.0.0" provider-name="Baianobr123">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="main.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>BHS TV Plugin</summary>
            <description>Assista BHS TV no seu Kodi.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
</addons>
